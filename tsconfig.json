{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "dist",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
