{
	"$schema": "https://json.schemastore.org/swcrc",
	"module": {
		"type": "es6"
	},
	"jsc": {
		"target": "es2018",
		"loose": true,

		"parser": {
			"syntax": "typescript",
			"tsx": true,
			"dynamicImport": true
		},
		"transform": {
			"react": {
				"runtime": "automatic",
				"throwIfNamespace": true,
				"development": false
			}
		},
		"externalHelpers": true
	},
	"exclude": [".*\\.spec|test\\.(j|t)s$"],
	"minify": false
}
